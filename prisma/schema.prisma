generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Authentication Models (NextAuth.js v5)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  role          String    @default("buyer") // buyer | supplier
  plan          String    @default("free")  // free | pro | enterprise
  company       String?

  // Phone verification
  phone         String?   @unique
  phoneVerified DateTime?

  // Usage tracking for plan limits
  searchesUsed     Int @default(0)
  profilesViewed   Int @default(0)
  contactsRevealed Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts        Account[]
  sessions        Session[]
  savedCompanies  SavedCompany[]
  searchHistory   SearchHistory[]
  profileViews    ProfileView[]
  contactReveals  ContactReveal[]
  conversations   Conversation[]

  // Workspace Hub relations
  workspaceEmails    WorkspaceEmail[]
  workspaceCalls     WorkspaceCall[]
  emailTemplates     EmailTemplate[]
  voipSettings       VoipSettings?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Phone OTP verification
model PhoneOTP {
  id        String   @id @default(cuid())
  phone     String
  otp       String
  expires   DateTime
  verified  Boolean  @default(false)
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  @@index([phone])
}

// Email OTP verification
model EmailOTP {
  id        String   @id @default(cuid())
  email     String
  otp       String
  expires   DateTime
  verified  Boolean  @default(false)
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  @@index([email])
}

// Password reset tokens
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}

// User's saved companies
model SavedCompany {
  id        String   @id @default(cuid())
  userId    String
  companyId Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, companyId])
}

// User's search history
model SearchHistory {
  id           String   @id @default(cuid())
  userId       String
  query        String
  resultsCount Int      @default(0)
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// User's viewed company profiles
model ProfileView {
  id        String   @id @default(cuid())
  userId    String
  companyId Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// User's revealed contacts
model ContactReveal {
  id        String   @id @default(cuid())
  userId    String
  companyId Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, companyId])
  @@index([userId])
}

// ============================================
// Business Data Models
// ============================================

model companies {
  id                                Int       @id @default(autoincrement())
  our_id                            String?   @db.VarChar(50)
  native_id                         String?   @db.VarChar(50)
  gst_number                        String?   @db.VarChar(50)
  company_name                      String?   @db.VarChar(500)
  category_search                   String?   @db.VarChar(255)
  entity                            String?   @db.VarChar(100)
  functionalities                   String?
  address                           String?
  hq_country_city_address           String?
  profile_url                       String?   @db.VarChar(500)
  catalog_mobile_url                String?   @db.VarChar(500)
  year_of_establishment             Int?
  ownership_type                    String?   @db.VarChar(100)
  employee_size                     String?   @db.VarChar(50)
  revenue_range                     String?   @db.VarChar(100)
  main_channels                     String?
  markets_served                    String?
  sustainability_traceability_notes String?
  certifications                    String?
  confidence_rating                 String?   @db.VarChar(50)
  key_contact_person_designation    String?   @db.VarChar(255)
  key_contact_person                String?   @db.VarChar(255)
  email                             String?   @db.VarChar(255)
  production_sites                  String?
  export_destinations               String?
  key_clients                       String?
  source_urls                       String?
  collection_date                   DateTime? @db.Date
  recent_news                       String?
  short_overview                    String?
  product_portfolio                 String?
  map_url                           String?
  country                           String?   @db.VarChar(100)
  created_at                        DateTime? @default(now()) @db.Timestamp(6)

  // Search performance indexes
  @@index([company_name])           // Company name search
  @@index([entity])                 // Entity type filtering
  @@index([category_search])        // Product category search
  @@index([gst_number])             // GST verification lookup
}

// ============================================
// Chat Conversation Models
// ============================================

// User's chat conversations (Industry Expert)
model Conversation {
  id        String   @id @default(cuid())
  userId    String
  title     String?  // Auto-generated from first message
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([userId])
}

// Individual messages within a conversation
model Message {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // "user" | "assistant"
  content        String   @db.Text
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}

// ============================================
// Workspace Hub Models
// ============================================

// Email templates for quick compose
model EmailTemplate {
  id        String   @id @default(cuid())
  name      String
  subject   String
  body      String   @db.Text
  type      String   // "inquiry" | "partnership" | "quote_request" | "custom"
  isSystem  Boolean  @default(false) // System templates vs user-created
  userId    String?  // null for system templates
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  emails WorkspaceEmail[]

  @@index([userId])
  @@index([type])
}

// Sent emails tracking
model WorkspaceEmail {
  id         String    @id @default(cuid())
  userId     String
  companyId  Int?      // Target company (nullable for external emails)
  templateId String?   // Template used (if any)

  // Email content
  toEmail String
  toName  String?
  subject String
  body    String @db.Text

  // Status tracking
  status        String    @default("sent") // "draft" | "sent" | "delivered" | "failed"
  sentAt        DateTime?
  failureReason String?

  // Metadata
  messageId String? // Email provider message ID for tracking
  provider  String? // "resend" | "nodemailer"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  template EmailTemplate? @relation(fields: [templateId], references: [id])

  @@index([userId])
  @@index([companyId])
  @@index([status])
  @@index([sentAt])
}

// VoIP call logs
model WorkspaceCall {
  id        String @id @default(cuid())
  userId    String
  companyId Int?   // Target company (nullable for external calls)

  // Call details
  toNumber   String
  toName     String?
  fromNumber String // Twilio number used

  // Status tracking
  status    String @default("initiated") // "initiated" | "ringing" | "in-progress" | "completed" | "failed" | "no-answer" | "busy"
  direction String @default("outbound")  // "outbound" | "inbound"

  // Duration & timing
  startedAt  DateTime?
  answeredAt DateTime?
  endedAt    DateTime?
  duration   Int?      // Duration in seconds

  // Twilio metadata
  twilioCallSid String? @unique
  recordingUrl  String? // If call recording enabled

  // Notes
  notes String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
  @@index([status])
  @@index([startedAt])
  @@index([twilioCallSid])
}

// User's VoIP settings
model VoipSettings {
  id     String @id @default(cuid())
  userId String @unique

  // Twilio phone number assigned to user
  twilioPhoneNumber String?

  // Settings
  callRecording    Boolean @default(false)
  voicemailEnabled Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
